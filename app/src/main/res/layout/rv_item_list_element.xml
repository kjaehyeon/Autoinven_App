<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="@drawable/warehouse_card_edge"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="5dp"
        android:backgroundTint="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginHorizontal="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
               >
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Engine Part 1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/status_badge"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="입고전"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/state0_background"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/datetime_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="등록일"
                android:textStyle="bold"
                android:textSize="12.5sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="2022년 01월 10일 13:56"
                android:textSize="12.5sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12.5sp"
                android:textStyle="bold"
                android:text="소유주"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/buyer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="DeMar DeRozan"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>